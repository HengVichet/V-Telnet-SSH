<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hengvichet.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host IP"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/but_connect"
        android:layout_above="@+id/but_save"
        android:layout_marginBottom="24dp"
        android:layout_alignRight="@+id/but_load_save"
        android:layout_alignEnd="@+id/but_load_save"
        android:layout_alignLeft="@+id/but_save"
        android:layout_alignStart="@+id/but_save" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/but_save"
        android:layout_above="@+id/but_load_save"
        android:layout_marginBottom="22dp"
        android:layout_alignRight="@+id/but_load_save"
        android:layout_alignEnd="@+id/but_load_save"
        android:layout_alignLeft="@+id/but_load_save"
        android:layout_alignStart="@+id/but_load_save" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Saved List"
        android:id="@+id/but_load_save"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Port"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:height="24dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telnet"
        android:id="@+id/radioButTelnet"
        android:layout_marginTop="68dp"
        android:checked="true"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSH"
        android:id="@+id/radioButSSH"
        android:checked="false"
        android:layout_alignTop="@+id/radioButTelnet"
        android:layout_toRightOf="@+id/but_connect"
        android:layout_toEndOf="@+id/but_connect" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:hint="Input IP"
        android:id="@+id/textViewName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/but_save"
        android:layout_alignEnd="@+id/but_save"
        android:layout_alignLeft="@+id/textViewIP"
        android:layout_alignStart="@+id/textViewIP"
        android:layout_above="@+id/textViewIP" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:hint="Input Port"
        android:id="@+id/textViewIP"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/but_save"
        android:layout_alignStart="@+id/but_save" />

</RelativeLayout>
