<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hengvichet.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host IP"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/but_connect"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textViewIP"
        android:layout_alignLeft="@+id/textViewIP"
        android:layout_alignStart="@+id/textViewIP"
        android:layout_alignRight="@+id/but_save"
        android:layout_alignEnd="@+id/but_save" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/but_save"
        android:layout_below="@+id/but_connect"
        android:layout_alignLeft="@+id/but_load_save"
        android:layout_alignStart="@+id/but_load_save"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/but_load_save"
        android:layout_alignEnd="@+id/but_load_save" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Saved List"
        android:id="@+id/but_load_save"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/but_save"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Port"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:height="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:hint="Input IP"
        android:id="@+id/textViewIP"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/but_save"
        android:layout_alignEnd="@+id/but_save"
        android:layout_alignLeft="@+id/textViewPort"
        android:layout_alignStart="@+id/textViewPort"
        android:layout_above="@+id/textViewPort" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:hint="Input Port"
        android:id="@+id/textViewPort"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/but_save"
        android:layout_alignStart="@+id/but_save" />

</RelativeLayout>
